{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--reload"
            ],
            "cwd": "${workspaceFolder}/backend",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "DATABASE_PATH": "${workspaceFolder}/data/swipe.db",
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Collector: Telegram Bot",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/collector/collector.py",
            "cwd": "${workspaceFolder}/collector",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "SESSION_PATH": "${workspaceFolder}/sessions/collector",
                "PREVIEWS_PATH": "${workspaceFolder}/data/previews",
                "BACKEND_URL": "http://localhost:8000"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Frontend: Vite Dev",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/frontend",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ],
    "compounds": [
        {
            "name": "Full Stack (Backend + Frontend)",
            "configurations": [
                "Backend: FastAPI",
                "Frontend: Vite Dev"
            ],
            "stopAll": true
        },
        {
            "name": "All Services",
            "configurations": [
                "Backend: FastAPI",
                "Collector: Telegram Bot",
                "Frontend: Vite Dev"
            ],
            "stopAll": true
        }
    ]
}