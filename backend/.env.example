# 环境配置示例
# 复制此文件为 .env 并填入实际值

# =============================================================================
# Telegram 配置 (从 https://my.telegram.org 获取)
# =============================================================================
TELEGRAM_API_ID=
TELEGRAM_API_HASH=
TELEGRAM_PHONE=+86xxxxxxxxxx
# 监听的频道列表，JSON 格式，可以是频道用户名或 ID
TELEGRAM_CHANNELS=["channel_username", -1001234567890]
# Telegram 会话文件路径
SESSION_PATH=/sessions/collector

# =============================================================================
# PikPak 配置
# =============================================================================
PIKPAK_USERNAME=
PIKPAK_PASSWORD=

# =============================================================================
# Linode 配置
# =============================================================================
LINODE_TOKEN=
LINODE_REGION=ap-northeast
LINODE_TYPE=g6-nanode-1

# =============================================================================
# 代理配置 (Linode 实例上会同时部署 SOCKS5 和 HTTP 代理)
# =============================================================================
# SOCKS5 代理端口 (Dante)
SOCKS5_PORT=1080
# HTTP 代理端口 (Tinyproxy, 自动计算为 SOCKS5_PORT + 7000)
# 默认: 8080 (如果 SOCKS5_PORT=1080)
# SOCKS5 认证用户名
SOCKS5_USERNAME=proxy
# SOCKS5 认证密码 (HTTP 代理使用相同凭据)
SOCKS5_PASSWORD=swipe2024

# =============================================================================
# Aria2 配置 (NAS 节点或远程服务器)
# =============================================================================
# 支持本地或远程 Aria2 RPC URL
# 本地示例: http://localhost:6800/jsonrpc
# 远程示例: http://192.168.1.100:6800/jsonrpc
ARIA2_RPC_URL=http://192.168.1.x:6800/jsonrpc
ARIA2_RPC_SECRET=

# =============================================================================
# 系统配置
# =============================================================================
# 任务聚合窗口时长 (分钟)
AGGREGATION_WINDOW_MINUTES=5
# 触发提前启动的任务阈值
BATCH_TASK_THRESHOLD=10
# 空闲销毁等待时间 (分钟)
IDLE_DESTROY_MINUTES=15
# 下载文件的基础目录 (NAS 挂载路径)
DOWNLOAD_BASE_PATH=/downloads

# =============================================================================
# 数据库配置
# =============================================================================
DATABASE_PATH=/data/swipe.db

# =============================================================================
# 预览图路径
# =============================================================================
PREVIEWS_PATH=/data/previews
